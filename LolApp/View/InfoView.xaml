<UserControl x:Class="LolApp.View.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LolApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#FFF4F4F5">
            <Image Source="{Binding ProfileIcon}" DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding Summoner.Name}" DockPanel.Dock="Top"/>
            <TextBlock Text="{Binding Path=Summoner.SummonerLevel, StringFormat=Level {0}}" DockPanel.Dock="Top"/>
            <TextBlock Text="{Binding Path=Summoner.RevisionDate}" DockPanel.Dock="Top"/>
        </DockPanel>


    </Grid>
</UserControl>
